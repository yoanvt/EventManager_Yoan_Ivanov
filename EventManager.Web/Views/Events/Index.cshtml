@model IEnumerable<EventManager.Data.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="buttonlink" asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="active">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDateTime)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDateTime)
                </td>
                <td>
                    <a class="buttonlink" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="buttonlink" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a class="buttonlink" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        
}
    </tbody>
</table>
